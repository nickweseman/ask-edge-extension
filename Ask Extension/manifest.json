{
    "name": "Ask.com Search Extension",
    "short_name": "Ask.com",
    "description": "This extension will search Ask.com for a given phrase.",
    "version": "1.0",
    "author": "Nick Weseman",
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "icons": {
        "16": "icon-bitty.png",
        "48": "icon-small.png",
        "128": "icon.png"
    },
    "manifest_version": 2,
    "-ms-preload": {
        "backgroundScript": "backgroundScriptsAPIBridge.js",
        "contentScript": "contentScriptsAPIBridge.js"
    }
}